{
    "openapi": "3.0.0",
    "info": {
        "title": "Payment Tracker API",
        "version": "1.0.0",
        "description": "API for tracking payment transactions (Source of Truth)"
    },
    "servers": [
        {
            "url": "http://localhost:8080/api"
        }
    ],
    "paths": {
        "/authentication/token": {
            "post": {
                "summary": "Obtain specific access token",
                "description": "Exchanges Basic Auth credentials for a Bearer token",
                "operationId": "getToken",
                "security": [
                    {
                        "basicAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful authentication",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "eyJhbGciOiJIUzI1Ni..."
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/payment-transactions/{uetr}": {
            "get": {
                "summary": "Get transaction status",
                "description": "Retrieves the current state of a payment transaction by UETR",
                "operationId": "getTransaction",
                "parameters": [
                    {
                        "name": "uetr",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "description": "Unique End-to-end Transaction Reference"
                    }
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Transaction details found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Transaction"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Transaction not found"
                    },
                    "401": {
                        "description": "Unauthorized or Invalid Token"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "TransactionStatus": {
                "type": "string",
                "enum": [
                    "PDNG",
                    "ACCC",
                    "RJCT"
                ]
            },
            "Transaction": {
                "type": "object",
                "properties": {
                    "uetr": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "status": {
                        "$ref": "#/components/schemas/TransactionStatus"
                    },
                    "from": {
                        "type": "string"
                    },
                    "to": {
                        "type": "string"
                    },
                    "amount": {
                        "type": "number",
                        "format": "double"
                    },
                    "currency": {
                        "type": "string"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    }
}